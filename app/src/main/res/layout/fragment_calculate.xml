<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical"
    tools:context="com.lpy.cansinga.fragment.CalculateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="1"
                android:text="车体加速度"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:text=" A/g"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/line1_text"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@color/bg_grey"
            android:gravity="center"
            android:text="加速度时程曲线"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/line2_text"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@color/bg_grey"
            android:gravity="center"
            android:text="速度时程曲线"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/line3_text"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@color/bg_grey"
            android:gravity="center"
            android:text="界面力位移曲线"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/line4_text"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@color/bg_grey"
            android:gravity="center"
            android:text="界面力吸能曲线"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/line5_text"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@color/bg_grey"
            android:gravity="center"
            android:text="系统能量平衡曲线"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
